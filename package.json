{
  "name": "market-tec",
  "version": "1.0.0",
  "description": "Marketplace for TecNM students to buy and sell products.",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev -r tsconfig-paths/register src/server.ts",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "migration:create": "typeorm migration:create",
    "migration:generate": "typeorm migration:generate -d src/infrastructure/database/dataSource.ts",
    "migration:run": "typeorm migration:run -d src/infrastructure/database/dataSource.ts",
    "migration:revert": "typeorm migration:revert -d src/infrastructure/database/dataSource.ts",
    "seed": "ts-node -r tsconfig-paths/register src/infrastructure/database/seeds/seed.ts"
  },
  "dependencies": {
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "connect-typeorm": "^2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "inversify": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.2",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.2",
    "sharp": "^0.34.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.17",
    "uuid": "^11.1.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^5.1.3",
    "@types/express-session": "^1.18.1",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.10.5",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "moduleNameMapper": {
      "^@config/(.*)$": "<rootDir>/src/config/$1",
      "^@domain/(.*)$": "<rootDir>/src/domain/$1",
      "^@infrastructure/(.*)$": "<rootDir>/src/infrastructure/$1",
      "^@application/(.*)$": "<rootDir>/src/application/$1",
      "^@api/(.*)$": "<rootDir>/src/api/$1",
      "^@utils/(.*)$": "<rootDir>/src/utils/$1"
    }
  },
  "keywords": [
    "typescript",
    "node",
    "express",
    "typeorm",
    "marketplace",
    "tecnm",
    "store",
    "repository-pattern"
  ],
  "author": "AntoSalazar",
  "license": "MIT"
}
